<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="author" content="">
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <link rel="stylesheet" href="~/Content/css/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    @Styles.Render("~/bundles/css")
</head>
<body>
<!-- header section start -->
<div class="header_section">
    <div class="header_main">
        <div class="mobile_menu">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="logo_mobile"><a href="index.html"><img src="~/Content/images/logo.png"></a></div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Watchs", "Watchs", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    </ul>

                </div>
            </nav>
        </div>
        <div class="container-fluid">
            <div class="logo"><a href="index.html"><img src="~/Content/images/logo.png"></a></div>
            <div class="menu_main">
                <ul>
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Watchs", "Watchs", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Auth", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Auth", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        if (User.IsInRole("Moderator") || User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Contacts list", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Users list", "Index", "Users", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Auth", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- banner section start -->
</div>
<!-- header section end -->
<div class="content">
    @RenderBody()}
</div><!-- footer section start -->
<div class="footer_section layout_padding">
    <div class="container">
        <h3 class="follow_text">Follow Now</h3>
        <div class="social_icon">
            <ul>
                <li><a href="#"><img src="~/Content/images/fb-icon.png"></a></li>
                <li><a href="#"><img src="~/Content/images/twitter-icon.png"></a></li>
                <li><a href="#"><img src="~/Content/images/linkedin-icon.png"></a></li>
                <li><a href="#"><img src="~/Content/images/instagram-icon.png"></a></li>
                <li><a href="#"><img src="~/Content/images/youtub-icon.png"></a></li>
            </ul>
        </div>
        <div class="location_main">
            <div class="location_left">
                <div class="call_text"><a href="#"><img src="~/Content/images/map-icon.png"><span class="call_padding">Location</span></a></div>
            </div>
            <div class="location_middle">
                <div class="call_text"><a href="#"><img src="~/Content/images/mail-icon.png"><span class="call_padding">demo@gmail.com</span></a></div>
            </div>
            <div class="location_right">
                <div class="call_text"><a href="#"><img src="~/Content/images/call-icon.png"><span class="call_padding">Call +01 1234567890</span></a></div>
            </div>
        </div>
    </div>
</div>
<!-- footer section end -->
<!-- copyright section start -->
<div class="copyright_section">
    <div class="container">
        <p class="copyright_text">2020 All Rights Reserved. Design by <a href="https://html.design">Free html  Templates</a></p>
    </div>
</div>
<!-- copyright section end -->

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>