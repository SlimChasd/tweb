@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_WithoutBannerLayout.cshtml";
}

<section class="register-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="register-box">
                    <h2 class="text-center">Register</h2>
                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "register-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.Label("First Name", new { @class = "control-label" })
                            @Html.TextBox("firstName", null, new { @class = "form-control" })
                            @Html.ValidationMessage("firstName", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Last Name", new { @class = "control-label" })
                            @Html.TextBox("lastName", null, new { @class = "form-control" })
                            @Html.ValidationMessage("lastName", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Email", new { @class = "control-label" })
                            @Html.TextBox("email", null, new { @class = "form-control" })
                            @Html.ValidationMessage("email", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Phone Number", new { @class = "control-label" })
                            @Html.TextBox("phoneNumber", null, new { @class = "form-control" })
                            @Html.ValidationMessage("phoneNumber", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Username", new { @class = "control-label" })
                            @Html.TextBox("username", null, new { @class = "form-control" })
                            @Html.ValidationMessage("username", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Password", new { @class = "control-label" })
                            @Html.Password("password", null, new { @class = "form-control" })
                            @Html.ValidationMessage("password", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .register-section {
        background-color: #000; /* Черный фон */
        color: #fff; /* Белый текст */
        padding: 100px 0;
        text-align: center;
    }

    .register-box {
        background: rgba(255, 255, 255, 0.1); /* Прозрачный белый фон */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .register-form {
        max-width: 400px;
        margin: auto;
    }

    .register-form .form-control {
        background-color: #333; /* Темно-серый фон для полей ввода */
        color: #fff; /* Белый текст для полей ввода */
        border: none;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .register-form .form-control:focus {
        border-color: #555; /* Цвет границы при фокусе */
        box-shadow: none;
    }

    .register-form .btn-primary {
        background-color: #d9534f; /* Цвет кнопки */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .register-form .btn-primary:hover {
        background-color: #c9302c; /* Цвет кнопки при наведении */
    }

    .text-danger {
        color: #d9534f; /* Цвет сообщений об ошибках */
    }

    .register-box h2 {
        margin-bottom: 30px;
        font-size: 2em;
        font-weight: 700;
        color: #fff;
    }
</style>
