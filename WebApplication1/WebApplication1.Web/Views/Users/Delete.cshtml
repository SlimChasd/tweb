@model Customer

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="delete-user-panel">
    <h2>Delete User</h2>
    <h3>Are you sure you want to delete this user?</h3>
    <div>
        <h4>@Model.FirstName @Model.LastName</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Email</dt>
            <dd>@Model.Email</dd>

            <dt>Phone Number</dt>
            <dd>@Model.PhoneNumber</dd>

            <dt>Username</dt>
            <dd>@Model.Username</dd>

            <dt>Role</dt>
            <dd>@Model.Role</dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

<style>
    .delete-user-panel {
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .delete-user-panel h2 {
        margin-bottom: 20px;
        font-size: 1.5em;
        color: #333;
    }

    .delete-user-panel h3 {
        margin-bottom: 20px;
        font-size: 1.2em;
        color: #333;
    }

    .dl-horizontal dt {
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        margin-left: 10px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>